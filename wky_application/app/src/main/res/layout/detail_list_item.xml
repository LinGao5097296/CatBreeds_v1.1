<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60dp" >

        <ImageView
            android:id="@+id/item_iv_cover"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp" >
        <TextView android:id="@+id/tv_fill1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <TextView android:id="@+id/tv_fill2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <TextView android:id="@+id/tv_fill3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <TextView android:id="@+id/tv_fill4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="销量："
            android:visibility="gone"
            android:gravity="right"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/item_tv_status"
            android:layout_width="fill_parent"
            android:layout_height="20dp"

            android:gravity="left"
android:visibility="gone"
            android:textSize="20dp"
            android:text="0"
            android:textColor="@color/red"
            android:layout_weight="1"
            />
    <CheckBox
        android:id="@+id/cb_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:visibility="gone"
        android:layout_weight="1"
        android:checked="false"
        android:focusable="false"/>
        </LinearLayout>

        <TextView android:id="@+id/item_tv_id"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            />
            <TextView android:id="@+id/item_tv_bid"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
              />
            <TextView
                android:id="@+id/item_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="书名"

                android:textColor="@color/black"
                android:textSize="15dp" />
        <TextView
            android:id="@+id/item_tv_made_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
           android:visibility="gone"
            android:text="出版社：中国人民出版社" />
            <TextView
                android:id="@+id/item_tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:maxLines="3"
                android:text="类型：无" />
            <TextView
                android:id="@+id/item_tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:visibility="gone"
                android:text="描述：无" />
            <TextView
                android:id="@+id/item_tv_price_impl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:text="价格：" />
            <TextView
                android:id="@+id/item_tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="待定" />
        <TextView
            android:id="@+id/item_tv_date_impl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:text="日期：" />
            <TextView
                android:id="@+id/item_tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:visibility="gone"
                android:text="时间：无" />


            </LinearLayout>



</LinearLayout>